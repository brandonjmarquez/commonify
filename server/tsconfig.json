{
  "compilerOptions": {
    "module": "esnext",
    "allowJs": true,
    "rootDir": "./",
    "outDir": "./build",
    "target": "es2022",
    "watch": true,
    "lib": [
      "es5", "es6", "dom", "dom.iterable", "ES2022",
    ],
    "types": [ "node" ],
    "typeRoots": [ "./node_modules/*"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@node_modules/*": ["../node_modules/*"],
    },
    "moduleResolution": "node",
  },
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    "esm": true
}
}