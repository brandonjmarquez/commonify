{
  "compilerOptions": {
    "module": "CommonJS",
    "allowJs": true,
    "jsx": "react-jsx",
    "rootDir": "./",
    "outDir": "./build",
    "target": "esnext",
    "watch": true,
    "lib": [
      "es5", "es6", "dom", "dom.iterable", "ES2022",
    ],
    "types": [ "node" ],
    "typeRoots": [ "./node_modules/*"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@node_modules/*": ["../node_modules/*"],
    },
    
    "moduleResolution": "node",
  },
}